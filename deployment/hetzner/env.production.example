# Circuit Sage Production Environment Variables
# Copy this file to .env.production and fill in your values

# Domain Configuration
DOMAIN_NAME=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Database Configuration
POSTGRES_USER=circuit_sage_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=circuit_sage_db

# Backend Configuration
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_openssl_rand_base64_32
ENCRYPTION_KEY=CHANGE_THIS_GENERATE_WITH_openssl_rand_hex_16
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Instructions:
# 1. Generate JWT_SECRET: openssl rand -base64 32
# 2. Generate ENCRYPTION_KEY: openssl rand -hex 16
# 3. Replace DOMAIN_NAME with your actual domain
# 4. Replace POSTGRES_PASSWORD with a strong password
# 5. Update ALLOWED_ORIGINS with your domain(s)
# 6. Update NEXT_PUBLIC_API_URL with your domain
